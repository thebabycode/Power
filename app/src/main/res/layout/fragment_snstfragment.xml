<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_snst">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/layout_snst1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/customborder">

                <ImageButton
                    android:id="@+id/snst1_btn"
                    android:layout_width="175dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="-25dp"
                    android:background="@color/white"
                    android:scaleType="fitCenter"
                    android:src="@drawable/snst1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/snst1_btn"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-20dp"
                    android:gravity="right"
                    android:text="Painting 5"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/snst1_btn"
                    android:layout_alignRight="@+id/snst1_btn"
                    android:layout_marginTop="-20dp"
                    android:layout_marginRight="5dp"
                    android:gravity="right"
                    android:text="$ 5.6"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/customborder">

                <ImageView
                    android:id="@+id/snst4"
                    android:layout_width="175dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="-25dp"
                    android:src="@drawable/snst4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/snst4"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-20dp"
                    android:gravity="right"
                    android:text="Painting 8"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/snst4"
                    android:layout_alignRight="@+id/snst4"
                    android:layout_marginTop="-20dp"
                    android:layout_marginRight="5dp"
                    android:gravity="right"
                    android:text="$ 12"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


</FrameLayout>